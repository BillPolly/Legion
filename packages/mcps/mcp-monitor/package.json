{
  "name": "@legion/mcp-monitor",
  "version": "1.0.0",
  "type": "module",
  "description": "MCP server for Node.js/TypeScript app monitoring with Sidewinder instrumentation. Supports direct scripts and package.json workflows with browser automation.",
  "main": "mcp-server.js",
  "bin": {
    "mcp-monitor": "mcp-server.js"
  },
  "scripts": {
    "start": "node mcp-server.js",
    "demo": "NODE_OPTIONS='--experimental-vm-modules' node mcp-client.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --no-coverage --testTimeout=30000",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/unit/ --no-coverage --testTimeout=30000",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/integration/ --no-coverage --testTimeout=60000",
    "test:server": "node test-server.js"
  },
  "dependencies": {
    "@legion/fullstack-monitor": "file:../../fullstack-monitor",
    "@legion/resource-manager": "file:../../resource-manager",
    "@legion/shared": "file:../../shared",
    "@legion/sidewinder": "file:../../sidewinder",
    "express": "^4.21.2",
    "puppeteer": "^21.0.0",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
