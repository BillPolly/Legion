{
  "name": "@legion/cli",
  "version": "1.0.0",
  "description": "Legion CLI - Handle-centric command-line interface",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "legion": "src/index.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js --runInBand",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js __tests__/unit --runInBand",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js __tests__/integration --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js --watch --runInBand",
    "test:browser": "node --experimental-vm-modules scripts/test-cli-puppeteer.js",
    "dev": "node --experimental-vm-modules src/index.js --server --port 4000"
  },
  "dependencies": {
    "@legion/resource-manager": "*",
    "@legion/showme": "*",
    "@legion/handle": "*",
    "@legion/server-framework": "*",
    "@legion/actors": "*",
    "chalk": "^5.3.0",
    "readline": "^1.3.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "@legion/actor-testing": "*",
    "jsdom": "^25.0.1"
  }
}