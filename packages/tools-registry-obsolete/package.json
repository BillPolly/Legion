{
  "name": "@legion/tools-registry",
  "version": "1.0.0",
  "description": "Tool registry and management infrastructure for Legion AI agents",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/unit --runInBand",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/integration --runInBand",
    "manager": "NODE_OPTIONS='--experimental-vm-modules' node scripts/manager.js",
    "search": "NODE_OPTIONS='--experimental-vm-modules' node scripts/search.js",
    "verify": "NODE_OPTIONS='--experimental-vm-modules' node scripts/verify.js",
    "tools": "NODE_OPTIONS='--experimental-vm-modules' node scripts/tools.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "build": "echo 'No build step required for ES modules'",
    "dev": "node --watch src/index.js"
  },
  "keywords": [
    "legion",
    "ai",
    "agent",
    "tools-registry",
    "mcp",
    "model-context-protocol",
    "llm",
    "automation",
    "wrapper",
    "module",
    "architecture"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@legion/nomic": "^1.0.0",
    "@legion/resource-manager": "^1.0.0",
    "@legion/schema": "^0.0.1",
    "@legion/storage": "^1.0.0",
    "@qdrant/js-client-rest": "^1.8.2",
    "mongodb": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/legion-framework/tools.git"
  },
  "bugs": {
    "url": "https://github.com/legion-framework/tools/issues"
  },
  "homepage": "https://github.com/legion-framework/tools#readme"
}
