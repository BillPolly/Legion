{
  "name": "@legion/rag",
  "version": "1.0.0",
  "description": "RAG (Retrieval-Augmented Generation) module for indexing and searching content",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "rag": "node scripts/rag-cli.js",
    "index": "node scripts/rag-cli.js index",
    "search": "node scripts/rag-cli.js search",
    "query": "node scripts/rag-cli.js query",
    "manage": "node scripts/rag-cli.js manage",
    "workspaces": "node scripts/rag-cli.js manage --action list-workspaces",
    "workspace:info": "node scripts/rag-cli.js manage --action workspace-info",
    "workspace:delete": "node scripts/rag-cli.js manage --action delete-workspace"
  },
  "keywords": [
    "legion",
    "rag",
    "retrieval-augmented-generation",
    "vector-search",
    "embeddings",
    "qdrant",
    "nomic",
    "ai",
    "agents"
  ],
  "author": "Legion Team",
  "license": "MIT",
  "dependencies": {
    "@legion/tools-registry": "*",
    "@legion/resource-manager": "*",
    "@legion/schema": "*",
    "@legion/nomic": "*",
    "@legion/llm-client": "*",
    "axios": "^1.7.0",
    "cheerio": "^1.0.0",
    "crypto": "^1.0.1",
    "mime-types": "^2.1.35"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0"
  }
}
