{
  "name": "@legion/showme",
  "version": "1.0.0",
  "description": "Generic asset display tool for Legion - shows any asset in appropriate floating window",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "npm run test:dom && npm run test:ui && npm run test:node",
    "test:dom": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.dom.js",
    "test:ui": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.js",
    "test:node": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.node.js",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "legion",
    "tool",
    "display",
    "visualization",
    "asset",
    "window"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "dependencies": {
    "@legion/resource-manager": "*",
    "@legion/server-framework": "*",
    "express": "^4.18.2",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "jest": "^29.0.0"
  }
}
