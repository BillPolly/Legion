{
  "name": "@legion/node-runner",
  "version": "1.0.0",
  "description": "Node.js process execution and lifecycle management for jsEnvoy AI agents",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "keywords": [
    "jsenvoy",
    "node",
    "process",
    "runner",
    "server",
    "ai",
    "agents"
  ],
  "author": "jsEnvoy Team",
  "license": "MIT",
  "dependencies": {
    "@legion/schema": "*",
    "cross-spawn": "^7.0.3",
    "ws": "^8.14.2",
    "detect-port": "^1.5.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  }
}
