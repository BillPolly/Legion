{
  "module": {
    "name": "calculator-module",
    "description": "Mathematical calculation tools for evaluating expressions and performing computations",
    "version": "1.0.0"
  },
  "tools": {
    "calculator": {
      "name": "calculator",
      "shortName": "calc",
      "description": "Evaluates mathematical expressions and performs calculations",
      "category": "mathematical",
      "tags": ["math", "calculation", "evaluation", "arithmetic"],
      "version": "1.0.0",
      "inputSchema": {
        "type": "object",
        "properties": {
          "expression": {
            "type": ["string", "number"],
            "description": "Mathematical expression to evaluate (string or number)"
          }
        },
        "required": ["expression"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "result": {
            "type": "number",
            "description": "The calculated result"
          },
          "expression": {
            "type": "string",
            "description": "The expression that was evaluated"
          }
        },
        "required": ["result", "expression"]
      },
      "security": {
        "dangerousKeywords": ["import", "require", "process", "fs", "child_process", "exec", "spawn"],
        "evaluation": "safe"
      }
    }
  }
}