{
  "module": {
    "name": "serper",
    "description": "Google search using Serper API for getting search results with proper ranking and metadata",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "search"
  },
  "tools": {
    "google_search": {
      "name": "google_search",
      "description": "Performs Google searches using the Serper API to retrieve organic results, answer boxes, and related searches",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query to send to Google",
            "minLength": 1
          },
          "num": {
            "type": "number",
            "description": "Number of results to return (default: 10, max: 100)",
            "minimum": 1,
            "maximum": 100,
            "default": 10
          },
          "dateRange": {
            "type": "string",
            "description": "Filter results by date range",
            "enum": ["day", "week", "month", "year"]
          }
        },
        "required": ["query"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "The search query that was used"
          },
          "searchInformation": {
            "type": "object",
            "description": "Information about the search results including total results and time taken"
          },
          "organic": {
            "type": "array",
            "description": "Organic search results",
            "items": {
              "type": "object",
              "properties": {
                "title": { "type": "string", "description": "Title of the result" },
                "link": { "type": "string", "description": "URL of the result" },
                "snippet": { "type": "string", "description": "Short description of the result" }
              },
              "required": ["title", "link"]
            }
          },
          "answerBox": {
            "type": "object",
            "description": "Featured snippet or answer box if available"
          },
          "knowledgeGraph": {
            "type": "object",
            "description": "Knowledge graph data if available"
          },
          "relatedSearches": {
            "type": "array",
            "description": "Related search suggestions",
            "items": { "type": "string" }
          }
        },
        "required": ["query", "organic"]
      },
      "category": "search",
      "tags": ["google", "search", "web", "serper", "api"],
      "authentication": {
        "required": true,
        "type": "api_key",
        "environmentVariable": "SERPER_API_KEY"
      },
      "examples": [
        {
          "input": { "query": "artificial intelligence latest news" },
          "output": {
            "query": "artificial intelligence latest news",
            "organic": [
              {
                "title": "Latest AI News - Tech Today",
                "link": "https://example.com/ai-news",
                "snippet": "The latest developments in artificial intelligence technology..."
              }
            ]
          }
        },
        {
          "input": { "query": "weather today", "num": 5 },
          "output": {
            "query": "weather today",
            "organic": [
              {
                "title": "Weather Forecast",
                "link": "https://example.com/weather",
                "snippet": "Today's weather forecast..."
              }
            ]
          }
        }
      ]
    }
  }
}