{
  "module": {
    "name": "encode-module",
    "description": "Encoding and decoding tools for Base64 and URL encoding",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "utilities"
  },
  "tools": {
    "base64_encode": {
      "name": "base64_encode",
      "description": "Encode data to Base64 format",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "The data to encode"
          },
          "inputEncoding": {
            "type": "string",
            "default": "utf8",
            "description": "Input encoding (default: utf8)"
          }
        },
        "required": ["data"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "encoded": {
            "type": "string",
            "description": "Base64 encoded data"
          },
          "success": {
            "type": "boolean",
            "description": "Whether encoding was successful"
          }
        },
        "required": ["encoded", "success"]
      },
      "category": "encoding",
      "tags": ["base64", "encode", "utilities"]
    },
    "base64_decode": {
      "name": "base64_decode",
      "description": "Decode Base64 data back to original format",
      "inputSchema": {
        "type": "object",
        "properties": {
          "encodedData": {
            "type": "string",
            "description": "The Base64 encoded data to decode"
          },
          "outputEncoding": {
            "type": "string",
            "default": "utf8",
            "description": "Output encoding (default: utf8)"
          }
        },
        "required": ["encodedData"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "decoded": {
            "type": "string",
            "description": "Decoded data"
          },
          "success": {
            "type": "boolean",
            "description": "Whether decoding was successful"
          }
        },
        "required": ["decoded", "success"]
      },
      "category": "encoding",
      "tags": ["base64", "decode", "utilities"]
    },
    "url_encode": {
      "name": "url_encode",
      "description": "Encode data for safe use in URLs (percent encoding)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "data": {
            "type": "string",
            "description": "The data to URL encode"
          }
        },
        "required": ["data"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "encoded": {
            "type": "string",
            "description": "URL encoded data"
          },
          "success": {
            "type": "boolean",
            "description": "Whether encoding was successful"
          }
        },
        "required": ["encoded", "success"]
      },
      "category": "encoding",
      "tags": ["url", "encode", "percent-encoding", "utilities"]
    },
    "url_decode": {
      "name": "url_decode",
      "description": "Decode URL-encoded data (percent decoding)",
      "inputSchema": {
        "type": "object",
        "properties": {
          "encodedData": {
            "type": "string",
            "description": "The URL encoded data to decode"
          }
        },
        "required": ["encodedData"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "decoded": {
            "type": "string",
            "description": "Decoded data"
          },
          "success": {
            "type": "boolean",
            "description": "Whether decoding was successful"
          }
        },
        "required": ["decoded", "success"]
      },
      "category": "encoding",
      "tags": ["url", "decode", "percent-decoding", "utilities"]
    }
  }
}