{
  "module": {
    "name": "file-module",
    "description": "Comprehensive file system operations including reading, writing, and directory management",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "filesystem"
  },
  "tools": {
    "file_read": {
      "name": "file_read",
      "description": "Reads the contents of a file from the file system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string",
            "description": "The path to the file to read"
          }
        },
        "required": ["filePath"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "content": {
            "type": "string",
            "description": "The contents of the file"
          },
          "path": {
            "type": "string", 
            "description": "The resolved path of the file"
          }
        },
        "required": ["content", "path"]
      },
      "category": "filesystem",
      "tags": ["file", "read", "io", "filesystem"]
    },
    "file_write": {
      "name": "file_write",
      "description": "Writes content to a file in the file system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "filePath": {
            "type": "string",
            "description": "The path where the file should be written"
          },
          "content": {
            "type": "string",
            "description": "The content to write to the file"
          },
          "append": {
            "type": "boolean",
            "description": "Whether to append to existing file (default: false)",
            "default": false
          }
        },
        "required": ["filePath", "content"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "The path where the file was written"
          },
          "bytesWritten": {
            "type": "number", 
            "description": "Number of bytes written"
          }
        },
        "required": ["path", "bytesWritten"]
      },
      "category": "filesystem",
      "tags": ["file", "write", "io", "filesystem"]
    },
    "directory_create": {
      "name": "directory_create", 
      "description": "Creates directories in the file system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "directoryPath": {
            "type": "string",
            "description": "The path of the directory to create"
          },
          "recursive": {
            "type": "boolean",
            "description": "Whether to create parent directories if they don't exist (default: true)",
            "default": true
          }
        },
        "required": ["directoryPath"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string",
            "description": "The path of the created directory"
          },
          "created": {
            "type": "boolean",
            "description": "Whether the directory was actually created (false if it already existed)"
          }
        },
        "required": ["path", "created"]
      },
      "category": "filesystem",
      "tags": ["directory", "create", "filesystem"]
    },
    "directory_list": {
      "name": "directory_list",
      "description": "Lists the contents of a directory",
      "inputSchema": {
        "type": "object",
        "properties": {
          "directoryPath": {
            "type": "string",
            "description": "The path to the directory to list"
          },
          "recursive": {
            "type": "boolean",
            "description": "Whether to list contents recursively (default: false)",
            "default": false
          },
          "includeHidden": {
            "type": "boolean",
            "description": "Whether to include hidden files (default: false)",
            "default": false
          }
        },
        "required": ["directoryPath"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "files": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "path": {"type": "string"},
                "type": {"type": "string"},
                "size": {"type": "number"}
              }
            },
            "description": "List of files and directories"
          },
          "path": {
            "type": "string",
            "description": "The directory path that was listed"
          }
        },
        "required": ["files", "path"]
      },
      "category": "filesystem", 
      "tags": ["directory", "list", "filesystem"]
    },
    "directory_change": {
      "name": "directory_change",
      "description": "Changes the current working directory",
      "inputSchema": {
        "type": "object",
        "properties": {
          "directoryPath": {
            "type": "string",
            "description": "The path to change to (supports ~, ., .., absolute and relative paths)"
          }
        },
        "required": ["directoryPath"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "oldPath": {
            "type": "string",
            "description": "The previous working directory"
          },
          "newPath": {
            "type": "string",
            "description": "The new working directory"
          }
        },
        "required": ["oldPath", "newPath"]
      },
      "category": "filesystem",
      "tags": ["directory", "change", "cd", "filesystem"]
    },
    "directory_current": {
      "name": "directory_current",
      "description": "Returns the current working directory",
      "inputSchema": {
        "type": "object",
        "properties": {
          "includeMetadata": {
            "type": "boolean",
            "description": "Whether to include directory metadata (default: false)",
            "default": false
          }
        }
      },
      "outputSchema": {
        "type": "object", 
        "properties": {
          "path": {
            "type": "string",
            "description": "The current working directory path"
          },
          "metadata": {
            "type": "object",
            "description": "Directory metadata (if includeMetadata is true)"
          }
        },
        "required": ["path"]
      },
      "category": "filesystem",
      "tags": ["directory", "current", "pwd", "filesystem"]
    }
  }
}