{
  "module": {
    "name": "server-starter",
    "description": "Server management tools for starting, stopping, and monitoring server processes",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "development"
  },
  "tools": {
    "server_start": {
      "name": "server_start",
      "description": "Start a development server process",
      "inputSchema": {
        "type": "object",
        "properties": {
          "command": {
            "type": "string",
            "description": "Command to start the server"
          },
          "port": {
            "type": "number",
            "description": "Port number for the server"
          }
        },
        "required": ["command"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "pid": {
            "type": "number",
            "description": "Process ID"
          },
          "port": {
            "type": "number",
            "description": "Server port"
          },
          "success": {
            "type": "boolean",
            "description": "Start success status"
          }
        },
        "required": ["success"]
      },
      "category": "development",
      "tags": ["server", "start", "process"]
    },
    "server_stop": {
      "name": "server_stop",
      "description": "Stop a running server process",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pid": {
            "type": "number",
            "description": "Process ID to stop"
          }
        },
        "required": ["pid"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "stopped": {
            "type": "boolean",
            "description": "Whether server was stopped"
          },
          "success": {
            "type": "boolean",
            "description": "Stop success status"
          }
        },
        "required": ["success"]
      },
      "category": "development",
      "tags": ["server", "stop", "process"]
    },
    "server_read_output": {
      "name": "server_read_output",
      "description": "Read output from a running server process",
      "inputSchema": {
        "type": "object",
        "properties": {
          "pid": {
            "type": "number",
            "description": "Process ID to read output from"
          }
        },
        "required": ["pid"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "output": {
            "type": "string",
            "description": "Server output"
          },
          "success": {
            "type": "boolean",
            "description": "Read success status"
          }
        },
        "required": ["success"]
      },
      "category": "development",
      "tags": ["server", "output", "logs"]
    }
  }
}