{
  "module": {
    "name": "ai-generation-module",
    "description": "AI-powered content generation tools including DALL-E 3 image generation",
    "version": "1.0.0"
  },
  "tools": {
    "generate_image": {
      "name": "generate_image",
      "shortName": "imagen",
      "description": "Generate an image using DALL-E 3 AI model. Returns base64 encoded image data by default.",
      "category": "ai",
      "tags": ["ai", "image", "generation", "dall-e", "openai"],
      "version": "1.0.0",
      "inputSchema": {
        "type": "object",
        "properties": {
          "prompt": {
            "type": "string",
            "description": "Text description of the image to generate"
          },
          "size": {
            "type": "string",
            "enum": ["1024x1024", "1792x1024", "1024x1792"],
            "default": "1024x1024",
            "description": "Size of the generated image"
          },
          "quality": {
            "type": "string",
            "enum": ["standard", "hd"],
            "default": "standard",
            "description": "Quality of the generated image (hd costs more)"
          },
          "style": {
            "type": "string",
            "enum": ["vivid", "natural"],
            "default": "vivid",
            "description": "Style of the generated image"
          },
          "response_format": {
            "type": "string",
            "enum": ["b64_json", "url"],
            "default": "b64_json",
            "description": "Format for the generated image (b64_json for base64, url for hosted URL)"
          }
        },
        "required": ["prompt"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the generation was successful"
          },
          "imageData": {
            "type": "string",
            "description": "Base64 encoded image data (data: URL format)"
          },
          "imageUrl": {
            "type": "string",
            "description": "URL to the generated image (when response_format is url)"
          },
          "metadata": {
            "type": "object",
            "description": "Generation metadata including prompt, model settings, and timestamp"
          },
          "filename": {
            "type": "string",
            "description": "Generated filename for the image"
          },
          "filePath": {
            "type": "string",
            "description": "Local file path where the image was saved"
          },
          "type": {
            "type": "string",
            "description": "File type identifier"
          },
          "subtype": {
            "type": "string",
            "description": "File format subtype"
          },
          "createdBy": {
            "type": "string",
            "description": "Tool identifier that created this content"
          }
        },
        "required": ["success", "metadata", "filename", "type", "createdBy"]
      },
      "security": {
        "requiresApiKey": true,
        "apiKeyEnvVar": "OPENAI_API_KEY",
        "rateLimit": "50 per hour"
      }
    }
  }
}