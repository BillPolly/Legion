{
  "module": {
    "name": "file-analysis",
    "description": "AI-powered file analysis tools for images, PDFs, documents using computer vision and language models",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "analysis"
  },
  "tools": {
    "analyze_file": {
      "name": "analyze_file",
      "description": "Analyze files including images, PDFs, and documents using AI vision capabilities to extract information, answer questions, and provide insights",
      "inputSchema": {
        "type": "object",
        "properties": {
          "file_path": {
            "type": "string",
            "description": "Path to the file to analyze (images, PDFs, documents)",
            "minLength": 1
          },
          "prompt": {
            "type": "string",
            "description": "Analysis prompt or question about the file content",
            "minLength": 1
          },
          "provider": {
            "type": "string",
            "description": "LLM provider to use for analysis",
            "enum": ["anthropic", "openai"],
            "default": "anthropic"
          }
        },
        "required": ["file_path", "prompt"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the analysis was successful"
          },
          "analysis": {
            "type": "string",
            "description": "The AI analysis result or response"
          },
          "file": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "description": "File name"
              },
              "type": {
                "type": "string",
                "description": "File type (image, document, etc.)"
              },
              "mimeType": {
                "type": "string",
                "description": "MIME type of the file"
              },
              "size": {
                "type": "number",
                "description": "File size in bytes"
              }
            }
          },
          "provider": {
            "type": "string",
            "description": "Provider used for analysis"
          },
          "model": {
            "type": "string",
            "description": "Model used for analysis"
          },
          "error": {
            "type": "string",
            "description": "Error message if analysis failed"
          }
        },
        "required": ["success"]
      },
      "category": "analysis",
      "tags": ["ai", "vision", "image", "pdf", "document", "analysis", "ocr"],
      "authentication": {
        "required": true,
        "type": "api_keys",
        "environmentVariables": ["ANTHROPIC_API_KEY", "OPENAI_API_KEY"],
        "notes": "ANTHROPIC_API_KEY is required, OPENAI_API_KEY is optional for OpenAI provider"
      },
      "capabilities": {
        "supportedFormats": ["jpg", "jpeg", "png", "gif", "webp", "pdf", "doc", "docx", "txt"],
        "maxFileSize": "10MB",
        "features": ["text extraction", "image description", "document analysis", "question answering"]
      },
      "examples": [
        {
          "input": {
            "file_path": "/path/to/image.jpg",
            "prompt": "Describe what you see in this image"
          },
          "output": {
            "success": true,
            "analysis": "This image shows a beautiful sunset over a mountain landscape...",
            "file": {
              "name": "image.jpg",
              "type": "image",
              "mimeType": "image/jpeg",
              "size": 245760
            },
            "provider": "anthropic",
            "model": "claude-3-5-sonnet-20241022"
          }
        },
        {
          "input": {
            "file_path": "/path/to/document.pdf",
            "prompt": "What are the main points in this document?"
          },
          "output": {
            "success": true,
            "analysis": "The main points of this document are: 1. Introduction to AI concepts...",
            "file": {
              "name": "document.pdf",
              "type": "document",
              "mimeType": "application/pdf",
              "size": 512000
            },
            "provider": "anthropic",
            "model": "claude-3-5-sonnet-20241022"
          }
        }
      ]
    }
  }
}