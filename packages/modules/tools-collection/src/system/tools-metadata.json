{
  "module": {
    "name": "system",
    "description": "System-level tools for module management and introspection",
    "version": "1.0.0",
    "author": "Legion Team",
    "category": "system"
  },
  "tools": {
    "module_list": {
      "name": "module_list",
      "description": "List all loaded modules in the system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "includeDetails": {
            "type": "boolean",
            "default": false,
            "description": "Include detailed module information"
          }
        }
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "modules": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "name": {"type": "string"},
                "description": {"type": "string"},
                "toolCount": {"type": "number"}
              }
            },
            "description": "List of loaded modules"
          },
          "success": {
            "type": "boolean",
            "description": "Success status"
          }
        },
        "required": ["modules", "success"]
      },
      "category": "system",
      "tags": ["modules", "list", "system", "introspection"]
    },
    "module_info": {
      "name": "module_info",
      "description": "Get detailed information about a specific module",
      "inputSchema": {
        "type": "object",
        "properties": {
          "moduleName": {
            "type": "string",
            "description": "Name of the module to get info for"
          }
        },
        "required": ["moduleName"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "moduleInfo": {
            "type": "object",
            "description": "Detailed module information"
          },
          "success": {
            "type": "boolean",
            "description": "Success status"
          }
        },
        "required": ["success"]
      },
      "category": "system",
      "tags": ["modules", "info", "system", "introspection"]
    },
    "module_tools": {
      "name": "module_tools",
      "description": "List all tools provided by a specific module",
      "inputSchema": {
        "type": "object",
        "properties": {
          "moduleName": {
            "type": "string",
            "description": "Name of the module to get tools for"
          }
        },
        "required": ["moduleName"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "tools": {
            "type": "array",
            "items": {"type": "object"},
            "description": "Tools provided by the module"
          },
          "success": {
            "type": "boolean",
            "description": "Success status"
          }
        },
        "required": ["tools", "success"]
      },
      "category": "system",
      "tags": ["modules", "tools", "system", "introspection"]
    },
    "module_load": {
      "name": "module_load",
      "description": "Load a module into the system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "moduleName": {
            "type": "string",
            "description": "Name of the module to load"
          },
          "path": {
            "type": "string",
            "description": "Path to the module file"
          }
        },
        "required": ["moduleName", "path"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "loaded": {
            "type": "boolean",
            "description": "Whether module was loaded successfully"
          },
          "success": {
            "type": "boolean",
            "description": "Success status"
          }
        },
        "required": ["loaded", "success"]
      },
      "category": "system",
      "tags": ["modules", "load", "system", "management"]
    },
    "module_unload": {
      "name": "module_unload",
      "description": "Unload a module from the system",
      "inputSchema": {
        "type": "object",
        "properties": {
          "moduleName": {
            "type": "string",
            "description": "Name of the module to unload"
          }
        },
        "required": ["moduleName"]
      },
      "outputSchema": {
        "type": "object",
        "properties": {
          "unloaded": {
            "type": "boolean",
            "description": "Whether module was unloaded successfully"
          },
          "success": {
            "type": "boolean",
            "description": "Success status"
          }
        },
        "required": ["unloaded", "success"]
      },
      "category": "system",
      "tags": ["modules", "unload", "system", "management"]
    }
  }
}