{
  "name": "@legion/browser-monitor",
  "version": "1.0.0",
  "type": "module",
  "description": "Browser automation and monitoring for full-stack observability",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "demo": "node demo/demo.js"
  },
  "dependencies": {
    "puppeteer": "^21.0.0",
    "playwright": "^1.40.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  }
}