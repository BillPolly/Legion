{
  "name": "@legion/tools-registry",
  "version": "1.0.0",
  "description": "Clean, test-driven tool registry for Legion AI agents with semantic search capabilities",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "test:unit": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/unit --runInBand",
    "test:integration": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest __tests__/integration --runInBand",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "status": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js status",
    "status:verbose": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js status --verbose",
    "discover": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js discover",
    "discover:verbose": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js discover --verbose",
    "load": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js load",
    "load:module": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js load --module",
    "perspectives": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js perspectives",
    "embeddings": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js embeddings",
    "vectors": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js vectors",
    "vectors:load": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js vectors:load",
    "search": "NODE_OPTIONS=--experimental-vm-modules node scripts/search-tools.js",
    "verify": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js verify",
    "pipeline": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js pipeline",
    "clear": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js clear",
    "clear:force": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js clear --force",
    "clear:all": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js clear --all",
    "clear:all:force": "NODE_OPTIONS=--experimental-vm-modules node scripts/manage.js clear --all --force",
    "verify:modules": "NODE_OPTIONS=--experimental-vm-modules node scripts/verify-modules.js",
    "verify:modules:fix": "NODE_OPTIONS=--experimental-vm-modules node scripts/verify-modules.js --fix",
    "verify:modules:dry-run": "NODE_OPTIONS=--experimental-vm-modules node scripts/verify-modules.js --fix --dry-run",
    "test:tools": "NODE_OPTIONS=--experimental-vm-modules node scripts/test-tools.js",
    "test:tools:performance": "NODE_OPTIONS=--experimental-vm-modules node scripts/test-tools.js --performance",
    "test:tools:integration": "NODE_OPTIONS=--experimental-vm-modules node scripts/test-tools.js --integration",
    "test:tools:coverage": "NODE_OPTIONS=--experimental-vm-modules node scripts/test-tools.js --coverage",
    "report": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-report.js",
    "report:html": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-report.js --format html",
    "report:all": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-report.js --format all",
    "report:history": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-report.js --history",
    "verify:complete": "NODE_OPTIONS=--experimental-vm-modules node scripts/generate-report.js --integration",
    "verify:fix": "NODE_OPTIONS=--experimental-vm-modules node scripts/verify-modules.js --fix && npm run verify:complete",
    "_comment_tool_listing": "Tool Discovery Scripts - Standard way for anyone to see what tools are available",
    "list": "NODE_OPTIONS=--experimental-vm-modules node scripts/list-tools.js",
    "list:verbose": "NODE_OPTIONS=--experimental-vm-modules node scripts/list-tools.js --verbose",
    "list:json": "NODE_OPTIONS=--experimental-vm-modules node scripts/list-tools.js --json"
  },
  "keywords": [
    "legion",
    "ai",
    "agent",
    "tools-registry",
    "module-loader",
    "semantic-search",
    "test-driven"
  ],
  "author": "Legion Framework",
  "license": "MIT",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "@legion/llm-client": "*",
    "@legion/resource-manager": "*",
    "@legion/schema": "*",
    "@legion/storage": "*",
    "@qdrant/js-client-rest": "^1.15.1",
    "universal-github-app-jwt": "2.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "src/",
    "README.md"
  ]
}
