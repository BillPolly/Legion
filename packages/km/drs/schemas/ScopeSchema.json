{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["boxes", "ops", "assign"],
  "properties": {
    "boxes": {
      "type": "array",
      "items": {"type": "string", "pattern": "^S\\d+$"}
    },
    "ops": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["kind"],
        "properties": {
          "kind": {"type": "string", "enum": ["Some", "Every", "Not", "If", "Or"]},
          "var": {"type": "string"},
          "in": {"type": "string"},
          "over": {"type": "string"},
          "box": {"type": "string"},
          "cond": {"type": "string"},
          "then": {"type": "string"},
          "left": {"type": "string"},
          "right": {"type": "string"}
        }
      }
    },
    "assign": {
      "type": "object",
      "required": ["events", "entities"],
      "properties": {
        "events": {"type": "object"},
        "entities": {"type": "object"}
      }
    }
  }
}
