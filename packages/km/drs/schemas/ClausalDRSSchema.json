{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["referents", "conditions"],
  "properties": {
    "referents": {
      "type": "array",
      "items": {"type": "string"}
    },
    "conditions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "pred": {"type": "string"},
          "rel": {"type": "string"},
          "args": {
            "type": "array",
            "items": {"type": "string"}
          }
        },
        "required": ["args"]
      }
    }
  }
}
