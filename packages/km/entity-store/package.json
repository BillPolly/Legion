{
  "name": "@legion/km-entity-store",
  "version": "1.0.0",
  "description": "MongoDB-backed storage for knowledge graph entity and relationship instances",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/unit --runInBand",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/integration --runInBand",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand"
  },
  "dependencies": {
    "mongodb": "^6.0.0",
    "@legion/resource-manager": "workspace:*",
    "@legion/semantic-search": "workspace:*",
    "@legion/schema": "workspace:*"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ]
  }
}
