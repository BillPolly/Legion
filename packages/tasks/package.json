{
  "name": "@legion/tasks",
  "version": "1.0.0",
  "description": "Task execution framework for Legion agents",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@legion/resource-manager": "file:../resource-manager",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "jest": "^29.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "globals": {
      "jest": {
        "useESM": true
      }
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "^@legion/tasks$": "<rootDir>/src/index.js"
    },
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ]
  },
  "keywords": [
    "legion",
    "tasks",
    "agents",
    "execution",
    "framework"
  ],
  "author": "Legion Framework",
  "license": "MIT"
}