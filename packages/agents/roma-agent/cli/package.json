{
  "name": "@legion/roma-cli",
  "version": "1.0.0",
  "description": "Command-line interface for ROMA (Recursive Objective Management Agent)",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "roma-cli": "./bin/roma-cli.js",
    "roma": "./bin/roma.js"
  },
  "scripts": {
    "test": "jest",
    "dev": "node bin/roma-cli.js",
    "build": "echo 'No build step required for CLI'",
    "start": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma-cli.js",
    "cli": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma-cli.js",
    "roma": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma.js",
    "status": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma.js status",
    "execute": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma.js execute",
    "history": "NODE_OPTIONS='--experimental-vm-modules' node bin/roma.js history"
  },
  "dependencies": {
    "ws": "^8.14.2",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "cli-table3": "^0.6.3",
    "inquirer": "^9.2.12",
    "commander": "^11.1.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "keywords": [
    "roma",
    "agent",
    "cli",
    "task-execution",
    "legion"
