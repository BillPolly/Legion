import { ProjectAnalyticsService } from '../../src/services/ProjectAnalyticsService.js';

describe('ProjectAnalyticsService', () => {
  let service;

  beforeEach(() => {
    service = new ProjectAnalyticsService();
  });

  it('should record and retrieve metrics', () => {
    service.recordMetric('testMetric', 42);
    expect(service.getMetric('testMetric')).toBe(42);
  });

  it('should return null for non-existent metrics', () => {
    expect(service.getMetric('nonExistent')).toBeNull();
  });

  it('should clear all metrics', () => {
    service.recordMetric('test1', 1);
    service.recordMetric('test2', 2);
    service.clearMetrics();
    expect(service.getMetric('test1')).toBeNull();
    expect(service.getMetric('test2')).toBeNull();
  });
});
