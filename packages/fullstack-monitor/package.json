{
  "name": "@legion/fullstack-monitor",
  "version": "1.0.0",
  "type": "module",
  "description": "Full-stack monitoring orchestrator combining browser and backend observability",
  "main": "src/index.js",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --testTimeout=15000",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --runInBand --testTimeout=15000",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand --testTimeout=15000",
    "demo": "node demo/demo.js"
  },
  "dependencies": {
    "@legion/log-manager": "file:../log-manager",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "puppeteer": "^21.0.0",
    "puppeteer-screen-recorder": "^3.0.6",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "testTimeout": 10000
  }
}
