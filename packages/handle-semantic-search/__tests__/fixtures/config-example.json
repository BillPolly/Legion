{
  "name": "legion-api-service",
  "version": "1.0.0",
  "description": "API service configuration for Legion framework",
  "server": {
    "port": 3000,
    "host": "0.0.0.0",
    "cors": {
      "enabled": true,
      "origins": ["http://localhost:3000", "https://app.example.com"]
    }
  },
  "database": {
    "mongodb": {
      "uri": "mongodb://localhost:27017",
      "database": "legion_db",
      "collections": {
        "users": "users",
        "sessions": "sessions",
        "handles": "stored_handles"
      }
    },
    "qdrant": {
      "url": "http://localhost:6333",
      "collections": {
        "embeddings": "handle_vectors"
      }
    }
  },
  "services": {
    "embedding": {
      "provider": "nomic",
      "model": "nomic-embed-text-v1.5",
      "dimensions": 768
    },
    "llm": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20241022",
      "maxTokens": 4096,
      "temperature": 0.7
    }
  },
  "features": {
    "semanticSearch": {
      "enabled": true,
      "indexOnDemand": true,
      "defaultGlossCount": 3
    },
    "caching": {
      "enabled": true,
      "ttl": 3600
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "logs/app.log"
  }
}